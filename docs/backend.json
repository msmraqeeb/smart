
{
  "entities": {
    "Product": {
      "title": "Product",
      "description": "Represents a product in the store.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "slug": { "type": "string" },
        "sku": { "type": "string" },
        "description": { "type": "string" },
        "price": { "type": "number" },
        "salePrice": { "type": "number" },
        "category": { "type": "string" },
        "brand": { "type": "string" },
        "featured": { "type": "boolean" },
        "imageUrls": { "type": "array", "items": { "type": "string" } },
        "attributes": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "options": { "type": "array", "items": { "type": "string" } }
            },
            "required": ["name", "options"]
          }
        },
        "variants": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": { "type": "string" },
              "sku": { "type": "string" },
              "price": { "type": "number" },
              "salePrice": { "type": "number" },
              "imageUrls": { "type": "array", "items": { "type": "string" } },
              "attributes": { "type": "object" }
            },
            "required": ["id", "price", "attributes"]
          }
        }
      },
      "required": ["name", "slug", "price", "category", "imageUrls"]
    },
    "Category": {
      "title": "Category",
      "description": "Represents a product category.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "slug": { "type": "string" },
        "imageUrl": { "type": "string" },
        "imageHint": { "type": "string" },
        "parentId": { "type": "string", "description": "The ID of the parent category, if it's a sub-category." }
      },
      "required": ["name", "slug", "imageUrl"]
    },
    "Attribute": {
      "title": "Attribute",
      "description": "Represents a global product attribute like 'Color' or 'Size'.",
      "type": "object",
      "properties": {
        "name": { "type": "string", "description": "The name of the attribute (e.g., 'Color')." },
        "values": {
          "type": "array",
          "items": { "type": "string" },
          "description": "The possible values for the attribute (e.g., ['Red', 'Green', 'Blue'])."
        }
      },
      "required": ["name", "values"]
    },
    "Order": {
      "title": "Order",
      "description": "Represents a customer's order.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "customer": {
          "type": "object",
          "properties": {
            "fullName": { "type": "string" },
            "address": { "type": "string" },
            "district": { "type": "string" },
            "mobileNumber": { "type": "string" },
            "email": { "type": "string", "format": "email" },
            "area": { "type": "string" }
          },
          "required": ["fullName", "address", "district", "mobileNumber", "email", "area"]
        },
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": { "type": "string" },
              "name": { "type": "string" },
              "quantity": { "type": "number" },
              "price": { "type": "number" },
              "variant": { "type": "object" }
            },
            "required": ["id", "name", "quantity", "price"]
          }
        },
        "total": { "type": "number" },
        "status": { "type": "string", "enum": ["Processing", "Shipped", "Delivered", "Cancelled"] },
        "createdAt": { "type": "string", "format": "date-time" },
        "userId": { "type": "string" },
        "paymentMethod": { "type": "string", "enum": ["cod", "online"] },
        "shippingCost": { "type": "number" },
        "shippingZone": { "type": "string" }
      },
      "required": ["id", "customer", "items", "total", "status", "createdAt", "paymentMethod", "shippingCost", "shippingZone"]
    },
    "UserProfile": {
      "title": "User Profile",
      "description": "Stores user-specific information like addresses.",
      "type": "object",
      "properties": {
        "billingAddress": {
          "type": "object",
          "properties": {
            "name": { "type": "string" },
            "address": { "type": "string" },
            "mobile": { "type": "string" }
          },
          "required": ["name", "address", "mobile"]
        },
        "shippingAddress": {
          "type": "object",
          "properties": {
            "name": { "type": "string" },
            "address": { "type": "string" },
            "mobile": { "type": "string" }
          },
          "required": ["name", "address", "mobile"]
        },
        "wishlist": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "An array of product IDs that the user has added to their wishlist."
        }
      }
    },
    "Coupon": {
      "title": "Coupon",
      "description": "Represents a discount coupon.",
      "type": "object",
      "properties": {
        "code": { "type": "string" },
        "discountType": { "type": "string", "enum": ["percentage", "fixed"] },
        "discountValue": { "type": "number" },
        "expiresAt": { "type": "string", "format": "date-time" },
        "minSpend": { "type": "number" },
        "status": { "type": "string", "enum": ["active", "inactive"] },
        "autoApply": { "type": "boolean", "description": "If true, this coupon will be applied automatically if conditions are met." }
      },
      "required": ["code", "discountType", "discountValue", "status"]
    },
    "Review": {
      "title": "Review",
      "description": "Represents a customer review for a product.",
      "type": "object",
      "properties": {
        "author": { "type": "string" },
        "rating": { "type": "number" },
        "text": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" },
        "userId": { "type": "string" }
      },
      "required": ["author", "rating", "text", "createdAt", "userId"]
    }
  },
  "auth": {
    "providers": ["anonymous", "email"]
  },
  "firestore": {
    "/products/{productId}": {
      "schema": { "$ref": "#/entities/Product" },
      "description": "Stores individual product listings."
    },
    "/products/{productId}/reviews/{reviewId}": {
      "schema": { "$ref": "#/entities/Review" },
      "description": "Stores reviews for a specific product."
    },
    "/categories/{categoryId}": {
      "schema": { "$ref": "#/entities/Category" },
      "description": "Stores product categories."
    },
    "/attributes/{attributeId}": {
      "schema": { "$ref": "#/entities/Attribute" },
      "description": "Stores global product attributes."
    },
    "/orders/{orderId}": {
      "schema": { "$ref": "#/entities/Order" },
      "description": "Stores individual customer orders."
    },
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/UserProfile" },
      "description": "Stores user profile information, including addresses and wishlist."
    },
    "/coupons/{couponId}": {
      "schema": { "$ref": "#/entities/Coupon" },
      "description": "Stores discount coupons."
    }
  }
}
