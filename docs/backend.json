
{
  "entities": {
    "Product": {
      "title": "Product",
      "description": "Represents a product in the store.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "slug": { "type": "string" },
        "description": { "type": "string" },
        "price": { "type": "number" },
        "salePrice": { "type": "number" },
        "category": { "type": "string" },
        "brand": { "type": "string" },
        "featured": { "type": "boolean" },
        "imageUrl": { "type": "string" },
        "imageHint": { "type": "string" }
      },
      "required": ["name", "slug", "price", "category", "imageUrl"]
    },
    "Category": {
      "title": "Category",
      "description": "Represents a product category.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "slug": { "type": "string" },
        "imageUrl": { "type": "string" },
        "imageHint": { "type": "string" },
        "parentId": { "type": "string", "description": "The ID of the parent category, if it's a sub-category." }
      },
      "required": ["name", "slug", "imageUrl"]
    },
    "Order": {
      "title": "Order",
      "description": "Represents a customer's order.",
      "type": "object",
      "properties": {
        "customer": {
          "type": "object",
          "properties": {
            "fullName": { "type": "string" },
            "address": { "type": "string" },
            "city": { "type": "string" },
            "district": { "type": "string" },
            "mobileNumber": { "type": "string" },
            "email": { "type": "string", "format": "email" },
            "area": { "type": "string" }
          },
          "required": ["fullName", "address", "city", "district", "mobileNumber", "email", "area"]
        },
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": { "type": "string" },
              "name": { "type": "string" },
              "quantity": { "type": "number" },
              "price": { "type": "number" }
            },
            "required": ["id", "name", "quantity", "price"]
          }
        },
        "total": { "type": "number" },
        "status": { "type": "string", "enum": ["Processing", "Shipped", "Delivered", "Cancelled"] },
        "createdAt": { "type": "string", "format": "date-time" },
        "userId": { "type": "string" },
        "paymentMethod": { "type": "string", "enum": ["cod", "online"] }
      },
      "required": ["customer", "items", "total", "status", "createdAt", "paymentMethod"]
    },
    "UserProfile": {
      "title": "User Profile",
      "description": "Stores user-specific information like addresses.",
      "type": "object",
      "properties": {
        "billingAddress": {
          "type": "object",
          "properties": {
            "name": { "type": "string" },
            "address": { "type": "string" },
            "mobile": { "type": "string" }
          },
          "required": ["name", "address", "mobile"]
        },
        "shippingAddress": {
          "type": "object",
          "properties": {
            "name": { "type": "string" },
            "address": { "type": "string" },
            "mobile": { "type": "string" }
          },
          "required": ["name", "address", "mobile"]
        },
        "wishlist": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "An array of product IDs that the user has added to their wishlist."
        }
      }
    }
  },
  "auth": {
    "providers": ["anonymous", "email"]
  },
  "firestore": {
    "/products/{productId}": {
      "schema": { "$ref": "#/entities/Product" },
      "description": "Stores individual product listings."
    },
    "/categories/{categoryId}": {
      "schema": { "$ref": "#/entities/Category" },
      "description": "Stores product categories."
    },
    "/orders/{orderId}": {
      "schema": { "$ref": "#/entities/Order" },
      "description": "Stores individual customer orders."
    },
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/UserProfile" },
      "description": "Stores user profile information, including addresses and wishlist."
    }
  }
}
