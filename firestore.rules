rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // WARNING: These rules are completely open and are not secure.
    // They are intended for initial development and testing only.
    // You MUST secure your database before going to production.
    match /{document=**} {
      allow read, write: if true;
    }
  }
}

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files
    match /{allPaths=**} {
      allow read;
    }

    // Allow public write access to the 'images' folder
    match /images/{imageId} {
       allow write;
    }
  }
}
