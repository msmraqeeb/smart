rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // By default, deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow authenticated users to manage the 'orders' collection.
    // This allows admins to view all orders.
    // WARNING: This rule is permissive. In a production environment, you should
    // implement more granular access control, such as using custom claims to
    // verify admin status.
    match /orders/{orderId} {
      allow read, write: if request.auth != null;
    }
    match /orders {
        allow list: if request.auth != null;
    }

    // Allow users to create and manage their own user documents.
    match /users/{userId} {
      allow read, create, update: if request.auth != null && request.auth.uid == userId;
    }

    // Allow admins (any authenticated user in this insecure setup) to list all users.
    // WARNING: This is not secure. In production, check for an admin custom claim.
    match /users {
        allow list: if request.auth != null;
    }
  }
}
