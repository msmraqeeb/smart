rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // WARNING: The following rules are intentionally permissive for development.
    // In a production environment, you must implement more granular security rules,
    // likely using custom claims to properly distinguish between user roles (e.g., admin vs. customer).

    // Allow any authenticated user full access to any document.
    // This will allow the mock admin panel to function correctly.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
