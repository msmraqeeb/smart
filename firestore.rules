rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // By default, deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }

    // WARNING: The following rules are permissive and are intended for development
    // environments with a mock admin user. For production, you should implement
    // more granular access control, likely using custom claims to verify admin status.

    // Allow any authenticated user to list, read, and write to the 'orders' collection.
    // This is necessary for the admin panel to view and manage all orders.
    match /orders/{orderId} {
      allow read, write: if request.auth != null;
    }
    match /orders {
        allow list: if request.auth != null;
    }

    // Allow users to create and manage their own user documents.
    match /users/{userId} {
      allow read, create, update: if request.auth != null && request.auth.uid == userId;
    }

    // Allow any authenticated user to list users.
    // This is necessary for the 'Manage Users' page in the admin panel.
    match /users {
        allow list: if request.auth != null;
    }
  }
}
